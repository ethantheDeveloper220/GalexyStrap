<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base">

    <!-- Galaxy Theme - Cosmic Purple/Blue Color Scheme -->
    
    <!-- Text Editor Colors -->
    <SolidColorBrush x:Key="NewTextEditorBackground" Color="#0A0E27" />
    <SolidColorBrush x:Key="NewTextEditorForeground" Color="#E0D0FF" />
    <SolidColorBrush x:Key="NewTextEditorLink" Color="#7AA2F7" />
    
    <!-- Window Background Colors - Galaxy Gradient -->
    <Color x:Key="WindowBackgroundColorPrimary">#0F1419</Color>
    <Color x:Key="WindowBackgroundColorSecondary">#1A1F3E</Color>
    <Color x:Key="WindowBackgroundColorThird">#252A4E</Color>
    <Color x:Key="WindowBackgroundColorPrimaryWithOpacity">#800F1419</Color>
    <Color x:Key="WindowBackgroundColorSecondaryWithOpacity">#801A1F3E</Color>
    <Color x:Key="WindowBackgroundColorThirdWithOpacity">#80252A4E</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrushPrimary" Color="{StaticResource WindowBackgroundColorPrimary}" />
    <SolidColorBrush x:Key="WindowBackgroundBrushSecondary" Color="{StaticResource WindowBackgroundColorSecondary}" />
    <SolidColorBrush x:Key="WindowBackgroundBrushThird" Color="{StaticResource WindowBackgroundColorThird}" />
    
    <!-- Primary Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#0F1419" />
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#1A1F2E" />
    <SolidColorBrush x:Key="TertiaryBackgroundColor" Color="#252A3E" />
    
    <!-- Accent Colors - Galaxy Purple/Blue -->
    <SolidColorBrush x:Key="AccentColor" Color="#BB9AF7" />
    <SolidColorBrush x:Key="AccentColorLight" Color="#C0A4FF" />
    <SolidColorBrush x:Key="AccentColorDark" Color="#9D7CD8" />
    
    <!-- System Accent Colors - Galaxy Theme -->
    <Color x:Key="SystemAccentColor">#BB9AF7</Color>
    <Color x:Key="SystemAccentColorPrimary">#C0A4FF</Color>
    <Color x:Key="SystemAccentColorSecondary">#9D7CD8</Color>
    <Color x:Key="SystemAccentColorTertiary">#7AA2F7</Color>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#E0D0FF" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#A9B1D6" />
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#7982A9" />
    <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#4A5272" />
    
    <!-- Control Colors -->
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#1A1F2E" />
    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="#252A3E" />
    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="#2E3447" />
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush" Color="#1A1F2E" />
    <SolidColorBrush x:Key="ControlFillColorInputActiveBrush" Color="#2E3447" />
    
    <!-- Control Stroke Colors -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#3E4556" />
    <SolidColorBrush x:Key="ControlStrokeColorSecondaryBrush" Color="#4A5272" />
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentDefaultBrush" Color="#BB9AF7" />
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentSecondaryBrush" Color="#9D7CD8" />
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentTertiaryBrush" Color="#7AA2F7" />
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentDisabledBrush" Color="#4A5272" />
    
    <!-- Card Colors -->
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#1A1F2E" />
    <SolidColorBrush x:Key="CardBackgroundFillColorSecondaryBrush" Color="#252A3E" />
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#3E4556" />
    <SolidColorBrush x:Key="CardStrokeColorDefaultSolidBrush" Color="#3E4556" />
    
    <!-- Layer Colors -->
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#0F1419" />
    <SolidColorBrush x:Key="LayerOnAcrylicFillColorDefaultBrush" Color="#1A1F2E" />
    <SolidColorBrush x:Key="LayerOnAccentAcrylicFillColorDefaultBrush" Color="#BB9AF7" />
    
    <!-- Subtle Colors -->
    <SolidColorBrush x:Key="SubtleFillColorTransparentBrush" Color="#00000000" />
    <SolidColorBrush x:Key="SubtleFillColorSecondaryBrush" Color="#0F252A3E" />
    <SolidColorBrush x:Key="SubtleFillColorTertiaryBrush" Color="#0A2E3447" />
    <SolidColorBrush x:Key="SubtleFillColorDisabledBrush" Color="#00000000" />
    
    <!-- Control Elevation Colors -->
    <SolidColorBrush x:Key="ControlElevationBorderBrush" Color="#3E4556" />
    <SolidColorBrush x:Key="CircleElevationBorderBrush" Color="#3E4556" />
    <SolidColorBrush x:Key="TextControlElevationBorderBrush" Color="#3E4556" />
    <SolidColorBrush x:Key="TextControlElevationBorderFocusedBrush" Color="#BB9AF7" />
    <SolidColorBrush x:Key="AccentControlElevationBorderBrush" Color="#9D7CD8" />
    
    <!-- System Colors -->
    <SolidColorBrush x:Key="SystemFillColorSuccessBrush" Color="#73DCA5" />
    <SolidColorBrush x:Key="SystemFillColorCautionBrush" Color="#E0AF68" />
    <SolidColorBrush x:Key="SystemFillColorCriticalBrush" Color="#F7768E" />
    <SolidColorBrush x:Key="SystemFillColorNeutralBrush" Color="#A9B1D6" />
    <SolidColorBrush x:Key="SystemFillColorSolidNeutralBrush" Color="#7982A9" />
    <SolidColorBrush x:Key="SystemFillColorAttentionBackgroundBrush" Color="#252A3E" />
    <SolidColorBrush x:Key="SystemFillColorSuccessBackgroundBrush" Color="#1A2E2E" />
    <SolidColorBrush x:Key="SystemFillColorCautionBackgroundBrush" Color="#2E2A1A" />
    <SolidColorBrush x:Key="SystemFillColorCriticalBackgroundBrush" Color="#2E1A1A" />
    <SolidColorBrush x:Key="SystemFillColorNeutralBackgroundBrush" Color="#1A1F2E" />
    <SolidColorBrush x:Key="SystemFillColorSolidAttentionBackgroundBrush" Color="#252A3E" />
    <SolidColorBrush x:Key="SystemFillColorSolidNeutralBackgroundBrush" Color="#1A1F2E" />
    
    <!-- Application Background -->
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#0F1419" />
    <SolidColorBrush x:Key="SolidBackgroundFillColorBaseBrush" Color="#0F1419" />
    <SolidColorBrush x:Key="SolidBackgroundFillColorSecondaryBrush" Color="#1A1F2E" />
    <SolidColorBrush x:Key="SolidBackgroundFillColorTertiaryBrush" Color="#252A3E" />
    <SolidColorBrush x:Key="SolidBackgroundFillColorQuarternaryBrush" Color="#2E3447" />
    
    <!-- Menu and Flyout Colors -->
    <SolidColorBrush x:Key="MenuFlyoutPresenterBackgroundBrush" Color="#1A1F2E" />
    <SolidColorBrush x:Key="MenuFlyoutSubItemBackgroundBrush" Color="#252A3E" />
    
    <!-- Control Alt Colors -->
    <SolidColorBrush x:Key="ControlAltFillColorTransparentBrush" Color="#00000000" />
    <SolidColorBrush x:Key="ControlAltFillColorSecondaryBrush" Color="#0F252A3E" />
    <SolidColorBrush x:Key="ControlAltFillColorTertiaryBrush" Color="#0A2E3447" />
    <SolidColorBrush x:Key="ControlAltFillColorQuarternaryBrush" Color="#053E4556" />
    <SolidColorBrush x:Key="ControlAltFillColorDisabledBrush" Color="#00000000" />
    
    <!-- Control On Image Colors -->
    <SolidColorBrush x:Key="ControlOnImageFillColorDefaultBrush" Color="#CC1A1F2E" />
    <SolidColorBrush x:Key="ControlOnImageFillColorSecondaryBrush" Color="#B3252A3E" />
    <SolidColorBrush x:Key="ControlOnImageFillColorTertiaryBrush" Color="#992E3447" />
    <SolidColorBrush x:Key="ControlOnImageFillColorDisabledBrush" Color="#CC1A1F2E" />
    
    <!-- Accent Fill Colors -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#BB9AF7" />
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#9D7CD8" />
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#7AA2F7" />
    <SolidColorBrush x:Key="AccentFillColorDisabledBrush" Color="#4A5272" />
    <SolidColorBrush x:Key="AccentFillColorSelectedTextBackgroundBrush" Color="#BB9AF7" />
    
    <!-- Text On Accent Colors -->
    <SolidColorBrush x:Key="TextOnAccentFillColorPrimaryBrush" Color="#0F1419" />
    <SolidColorBrush x:Key="TextOnAccentFillColorSecondaryBrush" Color="#0F1419" />
    <SolidColorBrush x:Key="TextOnAccentFillColorDisabledBrush" Color="#4A5272" />
    <SolidColorBrush x:Key="TextOnAccentFillColorSelectedTextBrush" Color="#0F1419" />
    
    <!-- Control Solid Fill Colors -->
    <SolidColorBrush x:Key="ControlSolidFillColorDefaultBrush" Color="#252A3E" />
    
    <!-- Divider Colors -->
    <SolidColorBrush x:Key="DividerStrokeColorDefaultBrush" Color="#3E4556" />
    <SolidColorBrush x:Key="SurfaceStrokeColorDefaultBrush" Color="#4A5272" />
    <SolidColorBrush x:Key="SurfaceStrokeColorFlyoutBrush" Color="#3E4556" />
    
    <!-- Focus Colors -->
    <SolidColorBrush x:Key="FocusStrokeColorOuterBrush" Color="#BB9AF7" />
    <SolidColorBrush x:Key="FocusStrokeColorInnerBrush" Color="#0F1419" />
    
    <!-- Card Stroke Colors -->
    <SolidColorBrush x:Key="CardStrokeColorSecondaryBrush" Color="#3E4556" />
    
    <!-- Control Strong Colors -->
    <SolidColorBrush x:Key="ControlStrongFillColorDefaultBrush" Color="#4A5272" />
    <SolidColorBrush x:Key="ControlStrongFillColorDisabledBrush" Color="#3E4556" />
    
    <!-- Control Strong Stroke Colors -->
    <SolidColorBrush x:Key="ControlStrongStrokeColorDefaultBrush" Color="#7982A9" />
    <SolidColorBrush x:Key="ControlStrongStrokeColorDisabledBrush" Color="#4A5272" />
    
    <!-- Override any red colors with Galaxy colors -->
    <SolidColorBrush x:Key="CardBackground" Color="#1A1F3E" />
    <SolidColorBrush x:Key="CardBorder" Color="#3E4556" />
    <Color x:Key="ControlFillColorDefault">#1A1F2E</Color>
    <Color x:Key="ControlFillColorSecondary">#252A3E</Color>
    <Color x:Key="ControlFillColorTertiary">#2E3447</Color>
    
</ResourceDictionary>
