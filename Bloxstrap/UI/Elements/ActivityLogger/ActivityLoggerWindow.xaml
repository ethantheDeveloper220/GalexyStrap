<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.ActivityLogger.ActivityLoggerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Title="GalaxyStrap Activity Logger"
    Width="900"
    Height="600"
    MinWidth="600"
    MinHeight="400"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar
            Grid.Row="0"
            Title="GalaxyStrap Activity Logger"
            Padding="8" />

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Activity Log" />
                <TextBlock
                    Margin="0,4,0,0"
                    FontSize="13"
                    Foreground="{StaticResource TextFillColorSecondaryBrush}"
                    Text="Real-time logging of all GalaxyStrap activities. This window runs independently."
                    TextWrapping="Wrap" />
            </StackPanel>

            <!-- Controls -->
            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Filter -->
                <ui:TextBox
                    x:Name="FilterTextBox"
                    Grid.Column="0"
                    PlaceholderText="Filter logs..."
                    Icon="Search24"
                    TextChanged="FilterTextBox_TextChanged"
                    Margin="0,0,8,0" />

                <!-- Auto Scroll Toggle -->
                <ui:ToggleSwitch
                    x:Name="AutoScrollToggle"
                    Grid.Column="1"
                    Content="Auto-scroll"
                    IsChecked="True"
                    Margin="0,0,8,0" />

                <!-- Clear Button -->
                <ui:Button
                    x:Name="ClearButton"
                    Grid.Column="2"
                    Content="Clear"
                    Icon="Delete24"
                    Click="ClearButton_Click"
                    Margin="0,0,8,0" />

                <!-- Export Button -->
                <ui:Button
                    x:Name="ExportButton"
                    Grid.Column="3"
                    Content="Export"
                    Icon="ArrowDownload24"
                    Click="ExportButton_Click" />
            </Grid>

            <!-- Log Display -->
            <Border
                Grid.Row="2"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <ScrollViewer
                    x:Name="LogScrollViewer"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="LogItemsControl" Padding="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="8,4"
                                    Margin="0,2"
                                    Background="{Binding BackgroundBrush}"
                                    CornerRadius="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Text="{Binding Timestamp}"
                                            FontFamily="Consolas"
                                            FontSize="11"
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                                        <Border
                                            Grid.Column="1"
                                            Background="{Binding LevelBrush}"
                                            CornerRadius="2"
                                            Padding="4,2"
                                            HorizontalAlignment="Left"
                                            Margin="8,0">
                                            <TextBlock
                                                Text="{Binding Level}"
                                                FontSize="10"
                                                FontWeight="Medium"
                                                Foreground="White" />
                                        </Border>

                                        <TextBlock
                                            Grid.Column="2"
                                            Text="{Binding Message}"
                                            FontFamily="Consolas"
                                            FontSize="11"
                                            TextWrapping="Wrap"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border
            Grid.Row="2"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="StatusText"
                    Grid.Column="0"
                    FontSize="11"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Ready - 0 events logged" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock
                        FontSize="11"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="Running independently" />
                    <ui:SymbolIcon
                        Symbol="CheckmarkCircle24"
                        FontSize="14"
                        Foreground="Green"
                        Margin="8,0,0,0" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</base:WpfUiWindow>
