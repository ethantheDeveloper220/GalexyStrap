<Window
    x:Class="Voidstrap.UI.Elements.PerformanceMonitor.PerformanceOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Performance Overlay"
    Width="280"
    Height="Auto"
    SizeToContent="Height"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Topmost="True"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    MouseDown="Window_MouseDown">
    
    <Border Background="#DD000000" 
            CornerRadius="8" 
            BorderBrush="#FF333333" 
            BorderThickness="1"
            Padding="12"
            Margin="4">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="10" ShadowDepth="2"/>
        </Border.Effect>
        
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,8">
                <TextBlock Text="Performance Monitor" 
                          FontSize="13" 
                          FontWeight="Bold" 
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <Button Content="Ã—" 
                       Width="20" 
                       Height="20" 
                       HorizontalAlignment="Right"
                       Background="Transparent"
                       Foreground="#FFAAAAAA"
                       BorderThickness="0"
                       FontSize="16"
                       FontWeight="Bold"
                       Cursor="Hand"
                       Click="CloseButton_Click"
                       ToolTip="Close Overlay"/>
            </Grid>
            
            <Rectangle Height="1" Fill="#FF333333" Margin="0,0,0,8"/>
            
            <!-- CPU -->
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="CPU:" FontSize="11" Foreground="#FFAAAAAA" Margin="0,0,8,0"/>
                <ProgressBar Grid.Column="1" 
                            x:Name="CpuProgressBar" 
                            Height="14" 
                            Maximum="100"
                            Foreground="#FF3B82F6"
                            Background="#FF222222"
                            VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" 
                          x:Name="CpuText" 
                          Text="0%" 
                          FontSize="11" 
                          Foreground="#FFFFFFFF" 
                          Margin="8,0,0,0"
                          FontWeight="SemiBold"/>
            </Grid>
            
            <!-- GPU -->
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="GPU:" FontSize="11" Foreground="#FFAAAAAA" Margin="0,0,8,0"/>
                <ProgressBar Grid.Column="1" 
                            x:Name="GpuProgressBar" 
                            Height="14" 
                            Maximum="100"
                            Foreground="#FFEF4444"
                            Background="#FF222222"
                            VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" 
                          x:Name="GpuText" 
                          Text="0%" 
                          FontSize="11" 
                          Foreground="#FFFFFFFF" 
                          Margin="8,0,0,0"
                          FontWeight="SemiBold"/>
            </Grid>
            
            <!-- Memory -->
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="RAM:" FontSize="11" Foreground="#FFAAAAAA" Margin="0,0,8,0"/>
                <ProgressBar Grid.Column="1" 
                            x:Name="MemoryProgressBar" 
                            Height="14" 
                            Maximum="100"
                            Foreground="#FF10B981"
                            Background="#FF222222"
                            VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" 
                          x:Name="MemoryText" 
                          Text="0 MB" 
                          FontSize="11" 
                          Foreground="#FFFFFFFF" 
                          Margin="8,0,0,0"
                          FontWeight="SemiBold"/>
            </Grid>
            
            <Rectangle Height="1" Fill="#FF333333" Margin="0,4,0,8"/>
            
            <!-- FPS -->
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="FPS:" FontSize="11" Foreground="#FFAAAAAA" Margin="0,0,6,0"/>
                    <TextBlock x:Name="FpsText" Text="--" FontSize="11" Foreground="#FFF59E0B" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Ping:" FontSize="11" Foreground="#FFAAAAAA" Margin="0,0,6,0"/>
                    <TextBlock x:Name="PingText" Text="-- ms" FontSize="11" Foreground="#FF8B5CF6" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
            
            <!-- Roblox Status -->
            <TextBlock x:Name="StatusText" 
                      Text="Roblox: Not Running" 
                      FontSize="10" 
                      Foreground="#FF666666" 
                      HorizontalAlignment="Center"
                      Margin="0,4,0,0"/>
        </StackPanel>
    </Border>
</Window>
