<ui:UiPage
    x:Class="Voidstrap.UI.Elements.Settings.Pages.WebhooksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Webhooks"
    Scrollable="True"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,14,14">
        <!-- Header -->
        <Grid Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Discord Webhooks" />
                <TextBlock
                    Margin="0,4,0,0"
                    FontSize="13"
                    Foreground="{StaticResource TextFillColorSecondaryBrush}"
                    Text="Send activity notifications to Discord channels via webhooks."
                    TextWrapping="Wrap" />
            </StackPanel>
            
            <ui:Button Grid.Column="1"
                       Content="Open Webhook Manager"
                       Icon="Settings24"
                       Appearance="Primary"
                       Click="OpenWebhookManager_Click"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Webhook Configuration -->
        <TextBlock
            Margin="0,24,0,0"
            FontSize="16"
            FontWeight="Medium"
            Text="Webhook Settings" />

        <ui:CardControl
            Margin="0,8,0,0"
            Icon="Link24">
            <ui:CardControl.Header>
                <StackPanel>
                    <TextBlock FontWeight="Medium" Text="Discord Webhook URL" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="Enter your Discord webhook URL to send activity messages"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:TextBox
                x:Name="WebhookUrlTextBox"
                Icon="Globe24"
                PlaceholderText="https://discord.com/api/webhooks/..."
                Text="{Binding WebhookUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </ui:CardControl>

        <ui:CardControl
            Margin="0,8,0,0"
            Icon="Person24">
            <ui:CardControl.Header>
                <StackPanel>
                    <TextBlock FontWeight="Medium" Text="Webhook Username" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="Custom username for webhook messages (optional)" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:TextBox
                x:Name="WebhookUsernameTextBox"
                Icon="Rename24"
                PlaceholderText="Bloodstrap Bot"
                Text="{Binding WebhookUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </ui:CardControl>

        <!-- Activity Events -->
        <TextBlock
            Margin="0,24,0,0"
            FontSize="16"
            FontWeight="Medium"
            Text="Activity Events" />

        <ui:CardExpander
            Margin="0,8,0,0"
            Icon="Alert24"
            Header="Events to Send">
            <ui:CardExpander.Content>
                <StackPanel Margin="16">
                    <ui:CardControl Icon="Games24">
                        <ui:CardControl.Header>
                            <StackPanel>
                                <TextBlock FontWeight="Medium" Text="Game Launch" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="Send webhook when Roblox game launches" />
                            </StackPanel>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding WebhookOnGameLaunch, Mode=TwoWay}" />
                    </ui:CardControl>

                    <ui:CardControl Margin="0,8,0,0" Icon="DismissCircle24">
                        <ui:CardControl.Header>
                            <StackPanel>
                                <TextBlock FontWeight="Medium" Text="Game Close" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="Send webhook when Roblox game closes" />
                            </StackPanel>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding WebhookOnGameClose, Mode=TwoWay}" />
                    </ui:CardControl>

                    <ui:CardControl Margin="0,8,0,0" Icon="ArrowSync24">
                        <ui:CardControl.Header>
                            <StackPanel>
                                <TextBlock FontWeight="Medium" Text="Roblox Update" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="Send webhook when Roblox updates" />
                            </StackPanel>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding WebhookOnUpdate, Mode=TwoWay}" />
                    </ui:CardControl>

                    <ui:CardControl Margin="0,8,0,0" Icon="Warning24">
                        <ui:CardControl.Header>
                            <StackPanel>
                                <TextBlock FontWeight="Medium" Text="Errors" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="Send webhook when errors occur" />
                            </StackPanel>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding WebhookOnError, Mode=TwoWay}" />
                    </ui:CardControl>
                </StackPanel>
            </ui:CardExpander.Content>
        </ui:CardExpander>

        <!-- Test Webhook -->
        <TextBlock
            Margin="0,24,0,0"
            FontSize="16"
            FontWeight="Medium"
            Text="Test Webhook" />

        <ui:CardControl
            Margin="0,8,0,0"
            Icon="Send24">
            <ui:CardControl.Header>
                <StackPanel>
                    <TextBlock FontWeight="Medium" Text="Send Test Message" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="Test your webhook configuration"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button
                Content="Send Test"
                Icon="Send24"
                Click="SendTestWebhook_Click"
                Appearance="Primary" />
        </ui:CardControl>
    </StackPanel>
</ui:UiPage>
